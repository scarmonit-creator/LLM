{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"],
    "allowJs": true,
    "noEmit": false
  },
  "include": [
    "src/**/*.ts",
    "agents/**/*.ts",
    "adapters/**/*.ts",
    "tools/**/*.ts",
    "tests/**/*.ts",
    "orchestrator.ts"
  ],
  "exclude": ["node_modules", "dist"]
}