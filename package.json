{
  "name": "llm-demo",
  "version": "1.0.0",
  "description": "LLM integration examples with Claude API, Agent-to-Agent (A2A), and Browser History Automation",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "server": "node server.js",
    "a2a": "tsx src/a2a-example.ts",
    "a2a:dev": "tsx --watch src/a2a-example.ts",
    "jules": "node src/jules-demo.js",
    "ollama": "node src/ollama-demo.js",
    "multiagent": "tsx orchestrator.ts",
    "history:sync": "tsx tools/browser-history.ts",
    "build": "tsc",
    "build:ts": "tsc",
    "test": "node --test tests/*.test.js",
    "test:a2a": "tsx --test tests/a2a-agent-server.test.ts",
    "test:history": "node --test tests/browser-history.test.js",
    "test:coverage": "c8 --reporter=lcov --reporter=text node --test tests/*.test.js",
    "test:a2a:coverage": "c8 --reporter=lcov --reporter=text tsx --test tests/a2a-agent-server.test.ts",
    "test:history:coverage": "c8 --reporter=lcov --reporter=text node --test tests/browser-history.test.js",
    "test:full": "npm run lint && npm run format && npm test",
    "test:e2e": "npm run test:full && npm run test:history",
    "test:all": "npm run test:full && npm run test:a2a && npm run test:history",
    "coverage": "c8 --reporter=lcov --reporter=text --all npm run test:all",
    "coverage:report": "c8 report --reporter=text-lcov > coverage/lcov.info",
    "lint": "eslint src/ tests/ tools/ --fix",
    "format": "prettier --write \"src/**/*.{js,ts}\" \"tests/**/*.{js,ts}\" \"tools/**/*.{js,ts}\" \"*.{js,ts,json}\"",
    "autofix": "npm run lint && npm run format",
    "verify": "npm run build && npm run test:full",
    "verify:e2e": "npm run build && npm run test:e2e",
    "verify:all": "npm run build && npm run test:all"
  },
  "keywords": [
    "llm",
    "claude",
    "anthropic",
    "ai",
    "agent",
    "a2a",
    "browser-history",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "c8": "^10.1.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "c8": {
    "exclude": [
      "tests/**",
      "coverage/**",
      "node_modules/**",
      "*.config.js",
      "orchestrator.ts"
    ],
    "all": true,
    "check-coverage": true,
    "lines": 80,
    "functions": 80,
    "branches": 80,
    "statements": 80
  }
}
