{
  "name": "llm",
  "version": "1.1.0",
  "description": "LLM integration project with Claude, A2A, and browser history access - Optimized Version",
  "main": "src/ai-bridge.js",
  "type": "module",
  "scripts": {
    "start": "node src/ai-bridge.js",
    "start:server": "node server.js",
    "start:bridge": "node src/ai-bridge.js",
    "start:orchestrator": "tsx orchestrator.ts",
    "start:a2a": "tsx src/a2a-agent-server.ts",
    "chat": "node src/chat-launcher.js",
    "bridge:server": "node src/ai-bridge.js",
    "bridge:client": "node src/ai-bridge-client.js",
    "bridge:optimized": "node src/ai-bridge-optimized.js",
    "bridge:selection-wiring": "node src/wiring/selection-wiring.js",
    "agents:coordinator": "node src/agents/agent-coordinator.js",
    "optimize": "node scripts/optimize-project.js",
    "optimize:full": "npm run optimize && npm run lint && npm run format && npm run test:coverage",
    "optimize:text-selection": "node scripts/optimize-text-selection.js",
    "optimize:current-tab": "node scripts/optimize-text-selection.js",
    "performance:analyze": "node scripts/optimize-text-selection.js",
    "performance:monitor": "node -e \"require('./tools/performance-optimizer.js').performanceOptimizer.execute({operation: 'monitor'})\"  ",
    "error:analyze": "node -e \"require('./tools/error-handler.js').errorHandler.execute({operation: 'analyze'})\" ",
    "cloud-sql:setup": "node scripts/cloud-sql-setup.js",
    "cloud-sql:persist": "node scripts/cloud-sql-setup.js",
    "test:bridge": "cross-env NODE_OPTIONS=--experimental-vm-modules node --test tests/ai-bridge.test.js",
    "pretest": "npm run build --silent",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules node --test tests || echo 'No tests found'",
    "pretest:watch": "npm run build --silent",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules node --test --watch tests",
    "pretest:e2e": "npm run build --silent",
    "test:e2e": "cross-env NODE_OPTIONS=--experimental-vm-modules node --test tests/claude-client.test.js tests/jules-client.test.js tests/ollama-demo.test.js",
    "test:selection": "cross-env NODE_OPTIONS=--experimental-vm-modules node tests/selection/selection-manager.test.js",
    "test:agents": "cross-env NODE_OPTIONS=--experimental-vm-modules node tests/agents/agent-coordinator.test.js",
    "test:orchestrator": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --loader=tsx\" node --test tests/orchestrator.test.js",
    "test:a2a": "tsx --test tests/a2a-agent-server.test.ts",
    "test:history": "tsx --test tests/browser-history.test.js",
    "test:tools": "cross-env NODE_OPTIONS=--experimental-vm-modules node --test tests/tools/ || echo 'No tool tests found'",
    "pretest:full": "npm run build --silent",
    "test:full": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --loader=tsx\" node --test tests || echo 'No tests found'",
    "pretest:all": "npm run build --silent",
    "test:all": "npm run test && npm run test:orchestrator && npm run test:a2a && npm run test:tools",
    "test:performance": "cross-env NODE_OPTIONS=--experimental-vm-modules node scripts/performance-test.js",
    "test:coverage": "c8 npm test",
    "test:smoke": "cross-env NODE_OPTIONS=--experimental-vm-modules node scripts/smoke-test.js",
    "create-mock-performance-results": "node scripts/create-mock-performance-results.js",
    "coverage": "c8 npm test",
    "coverage:e2e": "c8 npm run test:e2e",
    "coverage:full": "c8 npm run test:full",
    "coverage:all": "c8 npm run test:all",
    "build": "tsc",
    "build:optimized": "tsc --build --incremental",
    "bundle:chat": "esbuild src/chat-launcher.js --bundle --platform=node --format=cjs --outfile=build/chat-launcher.cjs",
    "build:chat-exe": "npm run build --silent && npm run bundle:chat --silent && pkg build/chat-launcher.cjs --compress GZip --targets node18-win-x64 --output release/LLMChat.exe",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "eslint src/ tests/ tools/ scripts/ --fix --cache",
    "lint:check": "eslint src/ tests/ tools/ scripts/ --cache",
    "format": "prettier --write \"src/**/*.{js,ts}\" \"tests/**/*.{js,ts}\" \"tools/**/*.{js,ts}\" \"scripts/**/*.{js,ts}\" \"*.{js,ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts}\" \"tests/**/*.{js,ts}\" \"tools/**/*.{js,ts}\" \"scripts/**/*.{js,ts}\" \"*.{js,ts,json}\"",
    "autofix": "npm run lint && npm run format",
    "verify": "npm run build && npm run test:full",
    "verify:e2e": "npm run build && npm run test:e2e",
    "verify:all": "npm run build && npm run test:all",
    "clean": "rm -rf dist/ build/ coverage/ node_modules/.cache/ .eslintcache",
    "deps:check": "depcheck",
    "deps:update": "npm update && npm audit fix",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "dev": "tsx --watch src/ai-bridge.ts",
    "dev:orchestrator": "tsx --watch orchestrator.ts"
  },
  "keywords": [
    "llm",
    "claude",
    "anthropic",
    "ai",
    "agent",
    "a2a",
    "browser-history",
    "automation",
    "optimization",
    "performance",
    "cloud-sql",
    "persistence",
    "error-handling",
    "monitoring"
  ],
  "author": "scarmonit-creator",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "chromadb": "^3.0.17",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "gpt-tokenizer": "^2.6.1",
    "mysql2": "^3.11.3",
    "nodemailer": "^7.0.7",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@yao-pkg/pkg": "^6.8.0",
    "c8": "^10.1.3",
    "cross-env": "^10.1.0",
    "depcheck": "^1.4.7",
    "esbuild": "^0.25.10",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "pkg": {
    "scripts": [
      "build/chat-launcher.cjs"
    ],
    "assets": [
      "dist/**/*"
    ]
  },
  "c8": {
    "reporter": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ],
    "exclude": [
      "tests/**",
      "coverage/**",
      "node_modules/**",
      "dist/**",
      "build/**"
    ],
    "threshold": {
      "lines": 70,
      "functions": 70,
      "branches": 60,
      "statements": 70
    }
  },
  "eslintConfig": {
    "cache": true,
    "cacheLocation": "node_modules/.cache/eslint/"
  }
}