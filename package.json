{
  "name": "llm-framework",
  "version": "2.1.0",
  "description": "Comprehensive Node.js framework for multi-provider LLM orchestration with Claude, Jules, Ollama, ChromaDB RAG, browser history analysis, A2A agent protocols, MCP server, and autonomous tooling with advanced monitoring and security",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node src/optimized-server.js",
    "dev": "nodemon src/optimized-server.js",
    "build": "npm run build:tools && npm run build:ts",
    "build:tools": "node scripts/build-tools.js",
    "build:ts": "tsc",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:security": "node scripts/security-test.js",
    "lint": "eslint src/ --ext .js,.ts,.mjs",
    "lint:fix": "eslint src/ --ext .js,.ts,.mjs --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json}\"",
    "clean": "rimraf dist coverage .nyc_output logs",
    "performance": "node scripts/performance-optimizer.js",
    "performance:watch": "nodemon scripts/performance-optimizer.js",
    "health:check": "curl -f http://localhost:8080/health || exit 1",
    "dashboard": "node -r tsx/cjs src/monitoring/performance-dashboard.ts",
    "dashboard:start": "npm run dashboard",
    "dashboard:open": "node -e \"require('open')('http://localhost:8081')\" && npm run dashboard",
    "mcp:server": "node -r tsx/cjs src/mcp-server/server.ts",
    "mcp:stdio": "MCP_ENABLE_HTTP=false node -r tsx/cjs src/mcp-server/server.ts",
    "mcp:http": "MCP_ENABLE_STDIO=false node -r tsx/cjs src/mcp-server/server.ts",
    "mcp:test": "node scripts/test-mcp-tools.js",
    "security:scan": "node scripts/security-scan.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:status": "node -e \"import('./src/security/security-hardening.js').then(m => console.log(JSON.stringify(new m.SecurityHardening().getSecurityStatus(), null, 2)))\"",
    "setup:deps": "npm install && npm run build",
    "setup:full": "npm run setup:deps && npm run security:audit && npm run health:check",
    "deploy:render": "echo 'Deploying to Render...' && git push origin main",
    "deploy:railway": "railway up",
    "deploy:fly": "flyctl deploy",
    "docker:build": "docker build -t llm-framework .",
    "docker:run": "docker run -p 8080:8080 -p 8081:8081 -p 3001:3001 -e NODE_ENV=production llm-framework",
    "bridge:demo": "node examples/ai-bridge-demo.js",
    "bridge:optimize": "node scripts/run-bridge-performance-optimization.js"
  },
  "keywords": [
    "llm",
    "ai",
    "claude",
    "jules",
    "ollama",
    "chromadb",
    "rag",
    "websocket",
    "browser-automation",
    "performance-optimization",
    "mcp-server",
    "monitoring",
    "security",
    "dashboard",
    "real-time",
    "prometheus",
    "hardening"
  ],
  "author": "scarmonit-creator",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/scarmonit-creator/LLM.git"
  },
  "homepage": "https://github.com/scarmonit-creator/LLM#readme",
  "bugs": {
    "url": "https://github.com/scarmonit-creator/LLM/issues"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "better-sqlite3": "^11.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "socket.io": "^4.7.5",
    "ioredis": "^5.4.1",
    "winston": "^3.14.2",
    "isomorphic-dompurify": "^2.15.0",
    "validator": "^13.12.0",
    "compression": "^1.7.4",
    "ws": "^8.18.0",
    "chromadb": "^1.8.1",
    "node-fetch": "^3.3.2",
    "mime-types": "^2.1.35",
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^23.5.0",
    "open": "^10.1.0",
    "lru-cache": "^11.0.1",
    "rate-limit-redis": "^4.2.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "fs-extra": "^11.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/validator": "^13.12.2",
    "@types/ws": "^8.5.12",
    "@types/mime-types": "^2.1.4",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.13.0",
    "prettier": "^3.4.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "supertest": "^7.0.0",
    "cross-env": "^7.0.3",
    "@eslint/js": "^9.17.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}