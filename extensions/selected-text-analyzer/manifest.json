{
  "manifest_version": 3,
  "name": "Selected Text Analyzer",
  "version": "1.1.0",
  "description": "Analyze selected text or full page text with character, word, and line counts. Supports autonomous execution.",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Analyze Text"
  },
  "commands": {
    "analyze-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Analyze current page text"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      }
    }
  }
}
