{
  "manifest_version": 3,
  "name": "Selected Text Analyzer",
  "version": "3.0.1",
  "description": "Fast, privacy-conscious analysis of selected text and current page with optional on-device AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "analyze-page": {
      "suggested_key": { "default": "Alt+Shift+A" },
      "description": "Analyze current page"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_title": "Analyze"
  }
}
