{
  "manifest_version": 3,
  "name": "Selected Text Analyzer - Optimized Pro",
  "version": "3.0.0",
  "description": "Production-ready text analysis with advanced security, performance optimization, and Google Cloud Console integration.",
  
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "tabs",
    "webNavigation",
    "notifications"
  ],
  
  "optional_permissions": [
    "unlimitedStorage",
    "debugger"
  ],
  
  "host_permissions": [
    "https://github.com/*",
    "https://console.cloud.google.com/*",
    "https://firebase.google.com/*",
    "https://*.googleapis.com/*"
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; base-uri 'self'; require-trusted-types-for 'script';"
  },
  
  "background": {
    "service_worker": "optimized-background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://console.cloud.google.com/*",
        "https://firebase.google.com/*"
      ],
      "js": ["utils/performance-monitor.js", "extractors/gcp-console-extractor.js", "optimized-content.js"],
      "run_at": "document_end",
      "world": "ISOLATED"
    }
  ],
  
  "action": {
    "default_popup": "optimized-popup.html",
    "default_title": "Advanced Text & Data Analysis",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "commands": {
    "analyze-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Analyze selected text with AI"
    },
    "extract-gcp-data": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Extract Google Cloud Console data"
    },
    "autonomous-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Start autonomous execution mode"
    },
    "performance-metrics": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Show performance metrics"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "utils/*.js"],
      "matches": ["https://*/*"]
    }
  ],
  
  "minimum_chrome_version": "120",
  
  "externally_connectable": {
    "matches": [
      "https://github.com/*",
      "https://console.cloud.google.com/*",
      "https://firebase.google.com/*"
    ]
  }
}