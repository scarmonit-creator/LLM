{
  "manifest_version": 3,
  "name": "LLM Browser Capture",
  "version": "1.0.0",
  "description": "Captures selected text and current tab metadata for LLM processing",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "https://localhost:*/*",
    "https://*.scarmonit.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LLM Browser Capture"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}