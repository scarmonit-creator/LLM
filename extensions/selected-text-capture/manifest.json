{
  "manifest_version": 3,
  "name": "Selected Text Capture",
  "version": "1.0.0",
  "description": "Sends selected text and tab info to your LLM server",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["http://localhost:8080/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Capture selection",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
