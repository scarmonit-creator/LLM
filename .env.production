# Production Environment Configuration for LLM Framework
# Fly.io Production Deployment Settings

NODE_ENV=production
PORT=8080
DASHBOARD_PORT=8081
MCP_PORT=3001
WS_PORT=8082

# Security Configuration
MCP_ENABLE_AUTH=true
MCP_API_KEY=your-secure-api-key-here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# Performance Settings
MAX_MEMORY_MB=1024
WS_MAX_CONNECTIONS=1000
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9091
PROMETHEUS_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
AUDIT_LOGGING=true
LOG_RETENTION_DAYS=30

# Service Configuration
MCP_ENABLE_HTTP=true
MCP_ENABLE_STDIO=false
DASHBOARD_ENABLED=true
SECURITY_HARDENING=true

# Tool Configuration
MCP_TOOL_CLAUDE=true
MCP_TOOL_JULES=true
MCP_TOOL_OLLAMA=true
MCP_TOOL_RAG=true
MCP_TOOL_BROWSER_HISTORY=true
MCP_TOOL_KNOWLEDGE_GRAPH=true
MCP_TOOL_AI_BRIDGE=true