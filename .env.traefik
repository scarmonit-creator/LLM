# Traefik Environment Configuration
# Copy this file to .env and customize for your deployment

# Domain Configuration
LLM_HOST=llm.localhost
TRAEFIK_DASHBOARD_HOST=traefik.localhost
PROMETHEUS_HOST=prometheus.localhost
GRAFANA_HOST=grafana.localhost

# SSL/TLS Configuration
TRAEFIK_EMAIL=admin@example.com

# Authentication (generate with: htpasswd -nb admin password)
# Default: admin / admin123
TRAEFIK_AUTH=admin:$$2y$$10$$K8QfnmSWkC8H8O8nF8bFgOZHkV6Wn1Zv8O8nF8bFgO

# Monitoring Configuration
GRAFANA_PASSWORD=admin123

# LLM Service Configuration
NODE_ENV=production
LOG_LEVEL=info
PERFORMANCE_MONITORING=true

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=llm-traefik

# Production Configuration
# Uncomment and customize for production deployment
# LLM_HOST=llm.yourdomain.com
# TRAEFIK_DASHBOARD_HOST=traefik.yourdomain.com
# PROMETHEUS_HOST=prometheus.yourdomain.com
# GRAFANA_HOST=grafana.yourdomain.com
# TRAEFIK_EMAIL=your-email@yourdomain.com
# GRAFANA_PASSWORD=your-secure-password
# TRAEFIK_AUTH=your-generated-auth-string

# Security Configuration
# Set to true in production to disable insecure mode
TRAEFIK_SECURE_DASHBOARD=false

# Load Balancing Configuration
LLM_INSTANCES=3

# Resource Limits (uncomment for production)
# LLM_MEMORY_LIMIT=1g
# LLM_CPU_LIMIT=1.0
# TRAEFIK_MEMORY_LIMIT=256m
# TRAEFIK_CPU_LIMIT=0.5