# npm configuration optimized for CI/CD and development performance

# Registry configuration
registry=https://registry.npmjs.org/

# Performance optimizations
engine-strict=false
auto-install-peers=true
strict-peer-deps=false

# Security and audit settings (disabled for CI speed)
audit=false
fund=false

# Cache and installation optimizations
prefer-offline=true
package-lock-only=true
optional=false

# Progress and logging
progress=false
loglevel=error

# Build and compilation
rebuild=false

# CI/CD specific optimizations
# These will be overridden by environment variables when needed
# CI=true (set by CI environments)
# NODE_ENV=production (for production builds)